<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="ChatRoom.MainWindow"
        mc:Ignorable="d"
        Title="聊天室" Height="450" Width="800" MinHeight="450" MinWidth="800">
    <Grid>
        <TextBox x:Name="NameBox" Margin="10,10,10,0" HorizontalAlignment="Left" VerticalAlignment="Top" MinWidth="128" ToolTip="用户名"/>
        <TextBox x:Name="ChatBox" Margin="10,56,10,74" TextWrapping="Wrap" IsReadOnly="True" VerticalScrollBarVisibility="Auto"/>
        <TextBox x:Name="InputBox" Margin="10,0,111,10" TextWrapping="Wrap" VerticalAlignment="Bottom" MaxHeight="54" KeyDown="InputBox_KeyDown"/>
        <Button Content="发送" Height="54" Width="96" Margin="0,0,10,10" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="SendButton_Click"/>
    </Grid>
</Window>